%h2.text-center 
  Activity
  .badge.badge-info 
    = @activities.count

%ul.list-group
  - @activities.each do |activity|
    %li.list-group-item
      = activity.id 
      = activity.trackable_type
      = activity.trackable_id
      - if activity.trackable
        = link_to activity.trackable, activity.trackable
      = activity.key
      = activity.parameters
      = activity.owner.email
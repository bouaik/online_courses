.card 
  .card-header 
    .fa.fa-user 
    = link_to enrollement.user.username, user_path(enrollement.user)
    .fa.fa-clock  
    = time_ago_in_words(enrollement.updated_at)
    .fa.fa-graduation-cap
    = link_to enrollement.course, course_path(enrollement.course)
  .card-body 
    .text-warning.fa.fa-star
    %b= enrollement.rating
    .fa.fa-comment
    %small= enrollement.review
  - if current_user 
    - if policy(enrollement).edit?
      .card-footer 
        = link_to "Edit Review", edit_enrollement_path(enrollement)
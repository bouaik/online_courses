- content_for :title do 
  OnlineCourses101
  \|
  Edit
  All enrollements

%h2.text-center 
  Enrollements
  .badge.badge-info 
    = @enrollements.count

%br 

.table-responsive
  %table.table.table-bordered.table-striped.table-sm
    %thead
      %tr
        %th ID
        %th
          .fa.fa-user 
          User
        %th 
          .fa.fa-clock
          Bought
        %th
          .fa.fa-graduation-cap 
          Course
        %th
          .fa.fa-dollar-sign 
          Price
        %th 
          .text-warning.fa.fa-clock
          Reviewed on
        %th 
          .text-warning.fa.fa-star
          Rating
        %th 
          .text-warning.fa.fa-comment
          Review
        %th
        %th
        %th

    %tbody
      - @enrollements.each do |enrollement|
        %tr
          %td= enrollement.id
          %td= link_to enrollement.user, user_path(enrollement.user)
          %td= enrollement.created_at.strftime("%d/%b/%Y - %H:%M")
          %td= link_to enrollement.course, course_path(enrollement.course)
          %td= number_to_currency(enrollement.price)
          %td
            - if enrollement.rating.present?
              = enrollement.updated_at.strftime("%d/%b/%Y - %H:%M")
          %td= enrollement.rating
          %td= enrollement.review
          %td= link_to 'See review', enrollement
          %td= link_to 'Add Review', edit_enrollement_path(enrollement), class: "btn btn-sm btn-success"
          %td= link_to 'Delete enrollement', enrollement, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger"
!= pagy_bootstrap_nav(@pagy)
%br

